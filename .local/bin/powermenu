#!/bin/sh

CHOSEN=$(printf "Lock\nSuspend\nReboot\nShutdown\nLog Out" | rofi -dmenu -sync -i -p "Choose")

case "$CHOSEN" in
    "Lock"    ) exec hyprlock ;;
    "Suspend" ) systemctl suspend-then-hibernate ;;
    "Reboot"  ) reboot ;;
    "Shutdown") poweroff ;;
    "Log Out" ) niri msg action quit ;;
    *) exit 1 ;;
esac
